<%= link_to local_assigns[:keyword] do %>
  <li class="flex justify-between gap-x-6 py-5 px-4 border-b border-slate-50 hover:bg-indigo-50 transition-all">
    <div>
      <div class="flex items-start">
        <div class="border border-slate-200 rounded-full py-1 px-3 text-center text-sm mr-2">
        <span>
          <%= local_assigns[:keyword_counter] + 1 %>
        </span>
        </div>
        <div class="">
          <div>
            <%= local_assigns[:keyword].word %>
          </div>
          <%= render 'shared/scrape_status_badge', { scrape_status: local_assigns[:keyword].scrape_status } %>
        </div>
      </div>
     
    </div>
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
      </svg>
    </div>
  </li>
<% end %>
