<main class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 lg:max-w-[1024px] lg:mx-auto">
  <%= link_to keywords_path, class: "flex" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
    <span class="ml-1">
      Back
    </span>
  <% end %>

  <div class="mt-4">
    <h1 class="text-3xl"><%= @keyword.word %></h1>
    <div class="py-2">
      <%= render 'shared/scrape_status_badge', { scrape_status: @keyword.scrape_status } %>
    </div>
    <p class="text-sm text-slate-400 mt-5">
      Scraped At:
      <%= time_tag @keyword.updated_at %>
    <p>
  </div>

  <ul class="my-10 space-y-4 max-w-xs lg:max-w-md shadow-xl shadow-indigo-50 border border-slate-50 px-8 py-4 rounded-md">
    <li class="flex justify-between items-center">
      <strong>Total Adwords</strong> <span><%= number_with_delimiter @keyword.total_adword %> <%= 'links'.pluralize(@keyword.total_adword) %></span>
    </li>
    <li class="flex justify-between items-center">
      <strong>Total Links</strong> <span><%= number_with_delimiter @keyword.total_link %> <%= 'links'.pluralize(@keyword.total_link) %></span>
    </li>
    <li class="flex justify-between items-center">
      <strong>Total Results</strong> <span><%= number_with_delimiter @keyword.total_result %> <%= 'items'.pluralize(@keyword.total_result) %></span>
    </li>
    <li class="flex justify-between items-center">
      <strong>Total Search Times</strong> <span><%= number_with_delimiter @keyword.total_search_time %> <%= 'sec'.pluralize(@keyword.total_search_time) %></span>
    </li>
  </ul>

  <h2 class="text-2xl mt-8 mb-4">Cached page</h2>
  <iframe id="cached-page" title="Cached page" srcdoc='<%= @keyword.html %>' width="100%" height="800px" loading="lazy"></iframe>
</main>


