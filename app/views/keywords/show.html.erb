<main class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 lg:max-w-[1024px] lg:mx-auto">
  <%= link_to keywords_path, class: "flex" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
    <span class="ml-1">
      Back
    </span>
  <% end %>

  <div class="mt-4">
    <h1 class="text-3xl"><%= @keyword.word %></h1>
    <p class="text-sm text-slate-400">
      Scraped At:
      <%= time_tag @keyword.updated_at %>
    <p>
  </div>

  <ul class="mt-4 space-y-4">
    <li>
      <strong>Total Adwords</strong> <span><%= number_with_delimiter @keyword.total_adword %> links</span>
    </li>
    <li>
      <strong>Total Links</strong> <span><%= number_with_delimiter @keyword.total_link %> links</span>
    </li>
    <li>
      <strong>Total Results</strong> <span><%= number_with_delimiter @keyword.total_result %> items</span>
    </li>
    <li>
      <strong>Total Search Times</strong> <span><%= number_with_delimiter @keyword.total_search_time %> Sec</span>
    </li>

    <h2 class="text-2xl">Cached page</h2>
    <iframe id="cached-page" title="Cached page" srcdoc='<%= @keyword.html %>' width="100%" height="800px" loading="lazy"></iframe>
  </ul>
</main>


